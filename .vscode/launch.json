   "version": "0.2.0",
   "configurations": [
      {
         "name": "Launch Chrome against localhost",
         "preLaunchTask": "npm: start",
         "cleanUp": "onlyTab",
         "runtimeExecutable": "stable",
         "runtimeArgs": ["--app=http://localhost:8000"],
         "linux": {
            "runtimeExecutable": "/usr/bin/google-chrome"
         },
         "type": "chrome",
         "request": "launch",
         "webRoot": "${workspaceFolder}"
      }
   ]
}
